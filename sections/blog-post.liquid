
{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }
  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}



<div class="blog-post section-{{ section.id }}-padding">
   {% if section.settings.blog.articles.size > 0 %}
        <div class="featured-blogs page-width">
          <div class="grid grid--3-col-desktop grid--1-col">
            {% for article in section.settings.blog.articles limit: 9 %}
                  <div class="grid__item">
                      {% render 'article-card', article: article %}
                  </div>
            {% endfor %}
          </div>
        </div>
  {% endif %}
</div>

{% schema %}
{
  "name": "Featured blogs",
  "tag": "section",
  "class": "homepage-section",
  "settings": [
    {
      "type":"blog",
      "id":"blog",
      "label":"Choose blog"
    },
    {
      "type": "header",
      "content": "Section padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 150,
      "step": 2,
      "unit": "px",
      "label": "Padding top",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 150,
      "step": 2,
      "unit": "px",
      "label": "Padding bottom",
      "default": 40
    }   
  ],
  "presets": [
    {
      "name": "Featured blogs"
    }
  ]
}
{% endschema %}
