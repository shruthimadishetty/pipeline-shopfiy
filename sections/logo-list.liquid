
{% style %}
.scrolling-text--inner{
   display:flex;
   align-items: center;
    background: {{ section.settings.background_color }};
    padding: {{ section.settings.padding }}px 0;
    text-transform:uppercase;
    white-space:nowrap;
    padding:0 6rem;
    letter-spacing:1px; 
    overflow: hidden;
    padding-top:40px;
   padding-bottom:40px;
  }
.wrapper{
    display: flex;
    align-items: center;
    flex-shrink: 0;
    animation: move-rtl {{ section.settings.animation_time }}s linear infinite;
  
}
.scrolling-text__item{
   display: inline-flex;
    align-items: center;
   padding: 0 30px;
}
.scrolling-text__item img{
  width:100px;
  height:100px;
  margin:20px;
}
.outline-text{
  diplay:flex;
  color: {{ section.settings.text_color }};
/*    fill:transparent;
    -webkit-text-stroke-width:1px;
    -webkit-text-stroke-color:{{ section.settings.text_color }}; */
    font-size: {{ section.settings.font_size }}px;
    font-weight: {{ section.settings.font_weight }};
    background: {{ section.settings.background_color }};
}
 .outline-text .text--fill{
     fill:transparent;
    -webkit-text-stroke-width:1px;
    -webkit-text-stroke-color:{{ section.settings.text_color }};
 } 

  @keyframes move-rtl {
    0%{
      tranform:translateX(0);
    }
    100%{
      transform:translateX(-100%);
    }
  }

{% for block in section.blocks %}
    .backgroundcolor-{{block.id}}{
      color:{{block.settings.background_color}};
    }
{% endfor %}}
{% endstyle %}

<div class=" scrolling-text--inner backgroundcolor-{{block.id}}">
       <div class="wrapper">
         <div class="scrolling-text__item outline-text">
                {%- for block in section.blocks -%}
                        {%- if block.settings.image != blank -%}
                          {{ block.settings.image | img_url: '500x500', scale: 2 | img_tag: block.settings.image.alt, 'logo-bar__image' }}
                        {%- else -%}
                          {{ 'logo' | placeholder_svg_tag: 'placeholder-svg' }}
                        {%- endif -%}
                {%- endfor -%} 
          </div>
     </div>

     <div class="wrapper">
         <div class="scrolling-text__item outline-text">
                {%- for block in section.blocks -%}
                        {%- if block.settings.image != blank -%}
                          {{ block.settings.image | img_url: '500x500', scale: 2 | img_tag: block.settings.image.alt, 'logo-bar__image' }}
                        {%- else -%}
                          {{ 'logo' | placeholder_svg_tag: 'placeholder-svg' }}
                        {%- endif -%}
                {%- endfor -%} 
          </div>
     </div>

      <div class="wrapper">
         <div class="scrolling-text__item outline-text">
                {%- for block in section.blocks -%}
                        {%- if block.settings.image != blank -%}
                          {{ block.settings.image | img_url: '500x500', scale: 2 | img_tag: block.settings.image.alt, 'logo-bar__image' }}
                        {%- else -%}
                          {{ 'logo' | placeholder_svg_tag: 'placeholder-svg' }}
                        {%- endif -%}
                {%- endfor -%} 
          </div>
     </div>
</div>

  
{% schema %}
  {
    "name": "Logo",
    "class": "index-section",
    "max_blocks": 20,
    "blocks": [
      {
        "type": "logo_image",
        "name": "Logo",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
          {
            "type": "url",
            "id": "link",
            "label": "Link",
            "info": "Optional"
          }
        ]
      }
    ],
     "settings":[
      {
        "type": "color",
        "id": "text_color",
        "label": "Text color",
        "default": "#fff"
      },
      {
        "type": "color",
        "id": "background_color",
        "label": "Backgroound color",
        "default": "#1b1c26"
      },
      {
        "type": "range",
        "id": "padding",
        "min": 20,
        "max": 40,
        "step": 5,
        "unit": "px",
        "label": "Padding",
        "default": 30
      },
      {
        "type": "range",
        "id": "font_size",
        "min": 40,
        "max": 100,
        "step": 5,
        "unit": "px",
        "label": "Font size",
        "default": 40
      },
      {
        "type": "range",
        "id": "font_weight",
        "min": 400,
        "max": 600,
        "step": 100,
        "label": "Font weight",
        "default": 600
      },
      {
        "type": "range",
        "id": "animation_time",
        "min": 10,
        "max": 40,
        "step": 5,
        "unit": "s",
        "label": "Animation time in second",
        "default": 30
      }
    ],
    "presets": [
      {
        "name": "Logo",
        "category": "Image",
        "blocks": [
          {
            "type": "logo_image"
          },
          {
            "type": "logo_image"
          },
          {
            "type": "logo_image"
          },
          {
            "type": "logo_image"
          }
        ]
      }
    ]
  }
{% endschema %}
