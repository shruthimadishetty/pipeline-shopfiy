{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  .heading--{{ section.id }} {
    color:{{ section.settings.text_color }};
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

{% if section.settings.title_text != blank %}
  <div class="richtext section-{{ section.id }}-padding">
    <div class="page-width richtext__heading">
      <div class="richtext__heading--text hxl heading--{{ section.id }}">
        {{ section.settings.title_text }}
      </div>
    </div>
  </div>
{% endif %}

{% schema %}
{
  "name": "Richtext",
  "tag": "section",
  "class": "homepage-section",
  "settings": [
    {
      "type": "text",
      "id": "title_text",
      "label": "Text"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color"
    },
    {
      "type": "header",
      "content": "Section padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 150,
      "step": 2,
      "unit": "px",
      "label": "Padding top",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 150,
      "step": 2,
      "unit": "px",
      "label": "Padding bottom",
      "default": 40
    }
  ],
  "presets": [
    {
      "name": "Richtext"
    }
  ]
}
{% endschema %}
