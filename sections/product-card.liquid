{% if section.settings.collection_id != blank %}
  <div class="page-width featured-collection">
    <div class="featured-collection__heading home__subtitle center section-title">{{ section.settings.text_id }}</div>
    <div class="grid grid--2-col grid--3-col-desktop">
      {% assign product_limit = section.settings.product_limit %}
      {% for product in section.settings.collection_id.products limit: product_limit %}
        <div class="grid__item">
          {% render 'product-card', product: product %}
        </div>
      {% endfor %}
    </div>
  </div>
{% endif %}

{% schema %}
{
  "name": "Product collection",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type":"text",
      "id":"text_id",
      "label":"Text id"
    },
    {
      "type": "collection",
      "id": "collection_id",
      "label": "Collection"
    },
    {
      "type": "range",
      "id": "product_limit",
      "min": 1,
      "max": 20,
      "step": 1,
      "label": "Product limit",
      "default": 8
    }
  ],
  "presets": [
    {
      "name": "product-cart"
    }
  ]
}
{% endschema %}
