{{ 'product-page-key-points.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }
  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}


<div class="section-text containers section-{{ section.id }}-padding">
  <div class="product-heading">
    {% if section.settings.heading_text != blank %}
      <div class="h2 center">{{ section.settings.heading_text }}</div>
    {% endif %}
  </div>
  <div class="flexboxs main_containers {{ section.settings.image_alignment }}">
    <div class="flexbox_items center">
      {% if section.blocks.size > 0 %}
        <div class="section-text__content  {{ section.settings.text_alignment }}">
          {% for block in section.blocks %}
            <details>
              <summary class="collapsible h5">{{ block.settings.heading_text }}</summary>
              <div class="paragraph_collapsable">{{ block.settings.paragraph }}</div>
            </details>
          {% endfor %}
        </div>
      {% endif %}
    </div>
  </div>
</div>

{% style %}
  details > summary {
    padding: 4px;
    width: 200px;
    border: none;
    box-shadow: 1px 1px 2px #BBBBB;
    cursor: pointer;
  }
  details > p {
    padding: 4px;
    margin: 0;
    box-shadow: 1px 1px 2px #BBBBBB;
  }
{% endstyle %}


{% schema %}
{
  "name": "section text",
  "tag": "section",
  "class": "homepage-section",
  "settings": [
    {
      "type":"text",
      "id":"heading_text",
      "label":"Heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 150,
      "step": 2,
      "unit": "px",
      "label": "Padding top",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 150,
      "step": 2,
      "unit": "px",
      "label": "Padding bottom",
      "default": 40
    }
  ],
  "blocks":[
    {
    "name":"text",
      "type":"text",
      "settings":[
        {
        "type":"text",
        "id":"heading_text",
        "label":"Heading"
      },
        {
          "type":"range",
          "id":"font_rangee",
          "min":23,
          "max": 28,
          "step":1,
        "label":"Font-size",
          "default":28
        },
      {
        "type":"richtext",
        "id":"paragraph",
        "label":"Paragarph"
      }
      ]
    }
  ],
  "presets": [
    {
      "name": "section text"
    }
  ]
}
{% endschema %}

